<h1 class="text-2xl font-bold mb-6">Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
  <!-- Total Posts -->
  <div class="bg-white p-4 rounded shadow">
    <p class="text-gray-600">Total Posts</p>
    <p class="text-2xl font-bold"><%= @total_posts %></p>
  </div>
  <!-- Total Categories -->
  <div class="bg-white p-4 rounded shadow">
    <p class="text-gray-600">Total Categories</p>
    <p class="text-2xl font-bold"><%= @total_categories %></p>
  </div>
  <!-- Total Tags -->
  <div class="bg-white p-4 rounded shadow">
    <p class="text-gray-600">Total Tags</p>
    <p class="text-2xl font-bold"><%= @total_tags %></p>
  </div>
  <!-- Draft Posts -->
  <div class="bg-white p-4 rounded shadow">
    <p class="text-gray-600">Draft Posts</p>
    <p class="text-2xl font-bold"><%= @draft_posts %></p>
  </div>
</div>

<!-- Posts by Category -->
<h2 class="text-xl font-bold mt-8 mb-4">Posts by Category</h2>
<table class="min-w-full bg-white">
  <thead class="bg-gray-100">
    <tr>
      <th class="py-2">Category</th>
      <th class="py-2">Total Posts</th>
    </tr>
  </thead>
  <tbody>
    <% @posts_by_category.each do |category, count| %>
      <tr>
        <td class="border px-4 py-2"><%= category %></td>
        <td class="border px-4 py-2"><%= count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
