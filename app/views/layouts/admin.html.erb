<!DOCTYPE html>
<html>
  <head>
    <title>Admin Dashboard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload', defer: true %>
  </head>

  <body class="bg-gray-100">
    <nav class="bg-white shadow">
      <div class="container mx-auto px-4">
        <div class="flex justify-between">
          <div class="flex space-x-4">
            <!-- Logo -->
            <div>
              <a href="<%= admin_root_path %>" class="flex items-center py-5 px-2 text-gray-700 hover:text-gray-900">
                <span class="font-bold">Dashboard</span>
              </a>
            </div>
            <!-- Primary Nav -->
            <div class="hidden md:flex items-center space-x-1">
              <%= link_to 'Home', admin_root_path, class: 'py-5 px-3 text-gray-700 hover:text-gray-900' %>
              <%= link_to 'Posts', admin_posts_path, class: 'py-5 px-3 text-gray-700 hover:text-gray-900' %>
              <%= link_to 'Add Post', new_admin_post_path, class: 'py-5 px-3 text-gray-700 hover:text-gray-900' %>
              <%= link_to 'Pending', pending_admin_posts_path, class: 'py-5 px-3 text-gray-700 hover:text-gray-900' %>
            </div>
          </div>
          <!-- Secondary Nav -->
          <div class="hidden md:flex items-center space-x-1">
            <%= link_to edit_admin_user_registration_path, class: 'py-5 px-3' do %>
              <img src="<%= current_user.profile_picture_url %>" alt="Profile" class="h-8 w-8 rounded-full">
            <% end %>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'py-5 px-3' %>
          </div>
        </div>
      </div>
    </nav>

    <div class="container mx-auto px-4 py-6">
      <%= yield %>
    </div>
  </body>
</html>