<h1 class="text-2xl font-bold mb-6">Blog Posts</h1>

<% @posts.each do |post| %>
  <div class="mb-6">
    <h2 class="text-xl font-bold"><%= link_to post.title, post_path(post) %></h2>
    <p class="text-gray-600"><%= post.created_at.strftime('%B %d, %Y') %></p>
    <p class="mt-2"><%= truncate(post.content, length: 250) %></p>
  </div>
<% end %>

<div class="mt-4">
  <%= paginate @posts %>
</div>